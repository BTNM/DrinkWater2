<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/water_background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/drink_water_repetitive_alarms"
            android:textColor="@color/design_default_color_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:columnCount="7"
        android:rowCount="7"

        android:layout_marginStart="1px"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSwitch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_min" />

            <Switch
                android:id="@+id/switch10m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:showText="true"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSwitch3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_15_min" />

            <Switch
                android:id="@+id/switch15m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:showText="true"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSwitch4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_30_min" />

            <Switch
                android:id="@+id/switch30m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:showText="true"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSwitch5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_45_min" />

            <Switch
                android:id="@+id/switch45m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:showText="true"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="5"
            android:layout_row="3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSwitch6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_hour" />

            <Switch
                android:id="@+id/switch1h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:showText="true"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSwitch7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_5_hour" />

            <Switch
                android:id="@+id/switch1.5h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:showText="true"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSwitch8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2_hour" />

            <Switch
                android:id="@+id/switch2h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:showText="true"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="5"

            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSwitch9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3_hour" />

            <Switch
                android:id="@+id/switch3h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:showText="true"
                android:textOff="@string/off"
                android:textOn="@string/on" />

        </LinearLayout>


    </GridLayout>

    <Button
        android:id="@+id/btnTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="14dp"
        android:text="Test Button 1" />

</LinearLayout>

